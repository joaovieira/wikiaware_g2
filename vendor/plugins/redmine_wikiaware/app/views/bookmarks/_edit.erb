<%= stylesheet_link_tag("bookmarks", :plugin => "redmine_wikiaware") %>
<div id ="edit_form_box">
<% @page_id = @page.id unless @page_id %> 

<% form_for :bookmark, :url => {:controller => 'bookmarks', :action => 'edit', :user_id => User.current, :page_id => @page_id } do |f| %>	
	<span class="edit_form_fields">
    <%= f.label :name, 'Name' %>:
    <%= f.text_field :name, :size => 15 %>
    <%= f.label :description, 'Description' %>:
    <%= f.text_field :description %>
	</span>
	<span class="edit_form_actions">
		<%= f.submit 'Save' %>
	</span>
<% end %>
</div>
