<div class="comment">
	<div class="comment-author">
		<%= link_to User.find(comment.user).login, :controller => 'users', :action => 'show', :id => comment.user %>
		said (<%= time_ago_in_words(comment.created_at) %> ago):
	</div>
	
	<% if authorize_for(:wiki, :edit) or User.current == comment.user %>
		<div class="comment-actions">
			<%= link_to 'Delete', {:controller => controller, :action => 'destroy', :id => comment}, :method => 'delete', :confirm => 'Are you sure?', :class => 'icon icon-del' %>
		</div>
	<% end %>
	
	<br/>
	<div class="comment-text"><%= h(comment.content).gsub(/\n/, '<br/>') %></div>
</div>
