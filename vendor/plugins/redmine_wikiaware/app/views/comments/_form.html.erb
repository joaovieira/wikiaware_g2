<div class="comment-heading">Add New Comment</div>

<% form_for [element, new_comment], :html => {:onsubmit => "if (document.getElementById('content_text').className == 'empty'){document.getElementById('content_text').value = ''};"} do |f| %>	
	<div class="field">
		<%= hinted_text_area_tag :content_text, nil, "Type your comment here.", :rows => 6 %>
	</div>
	<div class="actions">
		<%= f.submit 'Submit' %>
	</div>
<% end %>
