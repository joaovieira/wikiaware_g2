<h3>Leave a comment</h3>

<% form_for([@page, PageComment.new]) do |f| %>	
	<div class="field">
		<%= f.label :content_lbl, 'Comment' %><br />
		<%= hinted_text_area_tag :content_txt, nil, "Type your text here", :size => "40x5" %>
		
	</div>
	<div class="actions">
		<%= f.submit 'Submit' %>
	</div>
<% end %>
