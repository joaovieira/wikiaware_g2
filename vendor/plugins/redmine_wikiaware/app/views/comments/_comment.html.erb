<div class="comment">
	<div class="comment-author">
		<%= link_to User.find(comment.user).login, :controller => 'users', :action => 'show', :id => comment.user %>
		said (<%= time_ago_in_words(comment.created_at) %> ago):
	</div>
	
	<% if !User.current.not_has_permission? @page or User.current.admin %>
	<% if User.current.can_edit? @page or User.current == comment.user %>
		<div class="comment-actions">
			<%= link_to_remote 'Delete', {:url => {:controller => 'page_comments', :action => 'destroy', :id => comment}}, :method => 'delete', :class => 'icon icon-del' %>
		</div>
	<% end %>
	<% end %>
	
	<br/>
	<div class="comment-text"><%= h(comment.content).gsub(/\n/, '<br/>') %></div>
</div>
